#!/bin/bash
shopt -s lastpipe

scopes_file=".dev/scopes.txt"

scopes="("
cat "$scopes_file" | while read a;
do scopes="$scopes$a|";
done;
scopes="${scopes%\|})"

cat "$1" | grep -Eq "(fix|feat|docs|style|refactor|test|chore|rework|release)(\($scopes\))?: [a-z]"
result=$?
if test $result -ne 0
then echo "Please check that the commit message adheres to the guidelines: http://karma-runner.github.io/4.0/dev/git-commit-msg.html and matches the scopes defined in .dev/scopes.txt"
fi
exit $result
